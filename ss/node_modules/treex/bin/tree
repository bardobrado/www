#!/usr/bin/env node

const tree = require('../index.js')
const program = require('commander')

program
  .version('0.0.1')
  .usage('<path> [depth] : list files in path until to the depth')
  .arguments('<path> [depth]')
  .action(function(path, depth) {
    tree(path, depth)
  })
  .parse(process.argv)
  

